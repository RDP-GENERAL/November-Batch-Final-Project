CREATE TABLE inventory (
    p_id INT AUTO_INCREMENT PRIMARY KEY,
    p_name varchar(100) not null,
    p_price DECIMAL(5,2) NOT NULL,
    p_quantity INT NOT NULL
);
describe table inventory;
drop table inventory;

