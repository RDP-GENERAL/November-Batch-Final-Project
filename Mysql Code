CREATE TABLE analytics_table (
	sale_id int primary key AUTO_INCREMENT,
    c_id INT NOT NULL,
    c_name VARCHAR(100) NOT NULL,
    total_bill_amount DECIMAL(10,2) NOT NULL,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
)AUTO_INCREMENT=1;

